extends layout

block content

    .input.card

        .input-content

            h1 Exercise
            form(method="post" action="exercise")
                p Name
                input(type="text" name="title" placeholder="Squats")
                br
                p Workout Id
                input(type="text" name="workoutId", placeholder="Workout Id")
                br
                p Description
                input(type="text" name="description" placeholder="Bend your legs and do some stuff...")
                br
                p Sets
                input(type="text" name="sets" placeholder="3")
                br
                p Reps
                input(type="text" name="reps" placeholder="10")
                br
                br
                input(type="submit" value="Submit")
